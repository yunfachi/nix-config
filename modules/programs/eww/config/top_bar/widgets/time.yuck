(defpoll time :interval "1s" :initial "9:41:08" "date '+%H:%M:%S'")
(defpoll date :interval "5m" :initial "9:41:08" "date '+%d / %m (%A)'")

(defwidget widget_time []
    (box
        :class "time"
        :halign "center"
        :valign "center"
        (label
            :text time
            :tooltip date
        )
    )
)